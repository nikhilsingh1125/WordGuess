<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@drawable/bg"

    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="bmi calculator"
        android:textAllCaps="true"
        android:textColor="#B4001593"
        android:textStyle="bold"
        android:fontFamily="sans-serif-black"
        android:textSize="25sp"
        android:layout_marginTop="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="20dp"/>


    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="#636e72"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="20dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="What's your Weight?"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="40dp"
        />

    <EditText
        android:id="@+id/edtWeight"
        android:textColor="@color/black"
        android:layout_marginTop="5dp"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:gravity="center"
        android:background="@drawable/edt_bg"
        android:ems="3"
        android:hint="In Kg"
        android:layout_marginBottom="18dp"
        android:textSize="25sp"
        />

    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">


        <TextView
            android:id="@+id/txtHt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:text="What's your Height?"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="72dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/txtHt"
            android:text="What's your Height?"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edtHeightFt"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:layout_below="@id/txtHt"
            android:layout_marginStart="20dp"
            android:layout_marginTop="7dp"
            android:background="@drawable/edt_bg"
            android:ems="3"
            android:gravity="center"
            android:hint="In Feet"
            android:textColor="@color/black"
            android:textSize="25sp" />

        <EditText
            android:layout_below="@id/txtIn"
            android:layout_toEndOf="@id/txtHt"
            android:id="@+id/edtHeightIn"
            android:textColor="@color/black"
            android:layout_marginTop="5dp"
            android:layout_width="120dp"
            android:gravity="center"
            android:layout_height="100dp"
            android:ems="3"
            android:background="@drawable/edt_bg"
            android:hint="In Inches"
            android:textSize="25sp"
            android:layout_marginStart="75dp"/>

    </RelativeLayout>

    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginStart="52dp"
        android:layout_marginEnd="52dp"
        android:layout_marginTop="40dp"
        android:textColor="#FDD835"
        android:text="Calculate Your BMI"
        android:background="@drawable/btn_bg"
        />

    <TextView
        android:id="@+id/txtResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:textSize="20sp"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textAllCaps="true"/>



</LinearLayout>